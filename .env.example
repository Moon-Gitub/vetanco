# ============================================================================
# VETANCO RECLAMOS SYSTEM - ENVIRONMENT VARIABLES
# ============================================================================

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# ============================================================================
# KAPSO CONFIGURATION
# ============================================================================
# Obtener de: https://dashboard.kapso.ai/settings/api-keys
KAPSO_API_KEY=your_kapso_api_key_here

# Obtener de: https://dashboard.kapso.ai/settings/webhooks
KAPSO_WEBHOOK_SECRET=your_kapso_webhook_secret_here

# Número de WhatsApp Business (formato: 549XXXXXXXXX)
KAPSO_PHONE_NUMBER=549XXXXXXXXX

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Obtener de: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# ============================================================================
# SECURITY
# ============================================================================
# Secret para firmar tokens y validar funciones internas
FUNCTION_SECRET=your_random_secret_here_min_32_characters

# CORS Origins permitidos (separados por coma)
CORS_ORIGINS=http://localhost:3000,https://dashboard.vetanco.com

# ============================================================================
# RATE LIMITING
# ============================================================================
# Requests por minuto por IP
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# NOTIFICATIONS (OPCIONAL)
# ============================================================================
# Para enviar notificaciones de casos críticos

# SMTP para emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@vetanco.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=Sistema Reclamos <noreply@vetanco.com>

# Emails para alertas críticas (separados por coma)
CRITICAL_ALERTS_EMAILS=calidad@vetanco.com,gerencia@vetanco.com

# SMS (Twilio u otro proveedor)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_sid
SMS_AUTH_TOKEN=your_twilio_token
SMS_FROM_NUMBER=+5491144445555

# WhatsApp para notificaciones internas (opcional)
INTERNAL_WHATSAPP_NUMBERS=+5491155556666,+5491155557777

# ============================================================================
# INTEGRATIONS (OPCIONAL)
# ============================================================================
# ERP de Vetanco (si existe integración)
ERP_API_URL=https://erp.vetanco.com/api
ERP_API_KEY=your_erp_api_key

# Sistema de tickets/CRM (si existe)
CRM_API_URL=https://crm.vetanco.com/api
CRM_API_KEY=your_crm_api_key

# ============================================================================
# FEATURES FLAGS (OPCIONAL)
# ============================================================================
# Habilitar/deshabilitar funcionalidades

# Clasificación automática con IA
ENABLE_AUTO_CLASSIFICATION=true

# Envío de notificaciones
ENABLE_NOTIFICATIONS=true

# Integración con ERP
ENABLE_ERP_INTEGRATION=false

# Dashboard web
ENABLE_DASHBOARD=true

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================
# Solo para desarrollo

# Modo debug (muestra más logs)
DEBUG=false

# Deshabilitar verificación de firma en webhooks (solo dev)
DISABLE_WEBHOOK_SIGNATURE_VERIFICATION=false

# Usar mock de Supabase (para testing)
USE_SUPABASE_MOCK=false

# ============================================================================
# MONITORING (OPCIONAL)
# ============================================================================
# Sentry para error tracking
SENTRY_DSN=your_sentry_dsn_here

# New Relic para APM
NEW_RELIC_LICENSE_KEY=your_new_relic_key
NEW_RELIC_APP_NAME=Vetanco-Reclamos

# ============================================================================
# NOTAS
# ============================================================================
# 1. NO COMMITEAR este archivo con valores reales
# 2. Copiar a .env y completar con valores reales
# 3. Agregar .env al .gitignore
# 4. En producción, usar variables de entorno del servidor
# 5. Mantener sincronizado .env.example con nuevas variables
